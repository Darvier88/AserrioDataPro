<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox id="AnchorPane" fx:id="mainContainer" prefHeight="400.0" prefWidth="600.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21" fx:controller="ec.edu.espol.aserriosbd.AñadirEvaluacionController">
    <!-- Definir márgenes alrededor del VBox -->
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <!-- Contenedor para los campos generados dinámicamente -->
    <GridPane fx:id="formGrid" alignment="CENTER" hgap="10" vgap="10" />
    
    <!-- Contenedor para los botones "Añadir" y "Cancelar" -->
    <HBox alignment="CENTER" spacing="10">
        <Button onAction="#añadir" text="Añadir" />
        <Button onAction="#cancelar" text="Cancelar" />
    </HBox>
</VBox>
